{
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-trailing-spaces": "error",
        "no-console": "error",
        "prefer-const": "error",
        "object-curly-spacing": ["error", "always"]
    }
}
